    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^11.0.1",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
